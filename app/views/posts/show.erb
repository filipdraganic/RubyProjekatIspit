<section class="section">
  <div class="container">

    <nav class="level">
      <div class="level-left">
        <p class="level-item">
          <strong>Opcije</strong>
        </p>
      </div>

      <div class="level-right">
        <p class="level-item">
          <%=  link_to "Edit", edit_post_path(@post), class: "button" %>
        </p>
        <p class="level-item">
          <%= link_to "Delete", post_path(@post), method: :delete, data: {confirm: "Da li ste sigurni?"}, class:"button is-danger" %>
        </p>
      </div>
    </nav>
    <hr>


    <h2 class="title"><%= @post.title %></h2>
    <div class="content">
      <%= @post.content  %>
    </div>
  </div>
</section>

<section class="comments">

  <div class="container">
    <h2 class="subtitle is-5"><strong> <%= @post.comments.count %> </strong> Komentara</h2>
    <%= render @post.comments %>
    <div class="comment-form">
      <hr>
      <h3 class="subtitle is-3"> Napisi nesto!</h3>
      <%= render 'comments/form' %>
    </div>
  </div>
</section>